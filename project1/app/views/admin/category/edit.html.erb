
<div class="container mt-5">
    <div class="row d-flex justify-content-center ">
      
     <div class="col-md-8 col-md-offset-3">
        <h5>New Category</h5>
        <%= form_for [:admin, @category], url: {action: :update, controller: :category}, :html => {:multipart => true} do |f|%>
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control', id: 'myInput', :oninput => "myFunction();" %>
            <%= f.label :slug %>
            <%= f.text_field :slug,  class: 'form-control', id: 'demo' %>
            <%= f.label :parent_id %>
            <%= f.select :parent_id,options_for_select( @parent.map{ |c| [c.name, c.id]}, :selected =>@parentbycate), {:include_blank => true}, {class: "form-control"} %>
            <%= f.submit "Save changes", class: "btn btn-primary"%>
        <% end %>
     </div>
    </div>
</div>
<script>
        function myFunction() {
          var x = document.getElementById("myInput").value;
          document.getElementById("demo").value = x.replace(/ /g,'-');
        }
</script>
